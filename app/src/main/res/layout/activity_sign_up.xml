<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up.SignUpActivity">

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="341dp"
        android:layout_marginRight="341dp"
        android:layout_marginBottom="15dp"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="380dp"
        android:layout_height="3px"

        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:background="#6B6FAE"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpTitle"
        app:layout_constraintVertical_bias="0.087" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="87dp"
        android:layout_height="81dp"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        app:layout_constraintBottom_toTopOf="@+id/et_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/sungshin_logo" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="학번"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_name"
        app:layout_constraintEnd_toStartOf="@+id/IDcheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/IDcheck"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_entYear"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="입학 연도"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sp_schoolYear"
        app:layout_constraintEnd_toEndOf="@+id/et_pass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_pass"
        app:layout_constraintTop_toBottomOf="@+id/et_pass" />

    <EditText
        android:id="@+id/et_toeic"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="점수"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_signUp"
        app:layout_constraintEnd_toStartOf="@+id/tv_thesis"
        app:layout_constraintStart_toEndOf="@+id/tv_toeic"
        app:layout_constraintTop_toBottomOf="@+id/sp_2ndMajor" />

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:text="완료"
        app:backgroundTint="@color/mainColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_toeic" />


    <Button
        android:id="@+id/IDcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="중복확인"
        app:backgroundTint="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@+id/et_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.544" />

    <TextView
        android:id="@+id/tv_Academic"
        android:layout_width="33dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:text="학적"
        android:textColor="#040202"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_2ndMajorClass"
        app:layout_constraintEnd_toStartOf="@+id/sp_schoolYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_entYear" />

    <TextView
        android:id="@+id/tv_2ndMajorClass"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:text="복부전 여부"
        android:textColor="#040202"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_mainMajorTitle"
        app:layout_constraintEnd_toStartOf="@+id/sp_2ndMajorClass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Academic" />

    <TextView
        android:id="@+id/tv_mainMajorTitle"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:text="주전공"
        android:textColor="#040202"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_2ndMajor"
        app:layout_constraintEnd_toStartOf="@+id/sp_mainMajor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_2ndMajorClass" />

    <TextView
        android:id="@+id/tv_2ndMajor"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:text="선택 전공"
        android:textColor="#040202"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_toeic"
        app:layout_constraintEnd_toStartOf="@+id/sp_2ndMajor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mainMajorTitle" />

    <TextView
        android:id="@+id/tv_toeic"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@null"
        android:text="토익점수"
        android:textColor="#040202"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_signUp"
        app:layout_constraintEnd_toStartOf="@+id/et_toeic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_2ndMajor" />

    <TextView
        android:id="@+id/tv_thesis"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:text="졸업논문"
        android:textColor="#040202"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_signUp"
        app:layout_constraintEnd_toStartOf="@+id/sp_thesis"
        app:layout_constraintStart_toEndOf="@+id/et_toeic"
        app:layout_constraintTop_toBottomOf="@+id/sp_2ndMajor" />

    <Spinner
        android:id="@+id/sp_schoolYear"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/schoolYear"
        app:layout_constraintBottom_toTopOf="@+id/sp_2ndMajorClass"
        app:layout_constraintEnd_toStartOf="@+id/sp_semester"
        app:layout_constraintStart_toEndOf="@+id/tv_Academic"
        app:layout_constraintTop_toBottomOf="@+id/et_entYear" />

    <Spinner
        android:id="@+id/sp_semester"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:entries="@array/semester"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sp_schoolYear"
        app:layout_constraintTop_toBottomOf="@+id/et_entYear" />

    <Spinner
        android:id="@+id/sp_mainMajor"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:entries="@array/major"
        app:layout_constraintBottom_toTopOf="@+id/sp_2ndMajor"
        app:layout_constraintStart_toEndOf="@+id/tv_mainMajorTitle"
        app:layout_constraintTop_toBottomOf="@+id/sp_2ndMajorClass" />

    <Spinner
        android:id="@+id/sp_2ndMajorClass"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:entries="@array/_2ndMajorClass"
        app:layout_constraintBottom_toTopOf="@+id/sp_mainMajor"
        app:layout_constraintStart_toEndOf="@+id/tv_2ndMajorClass"
        app:layout_constraintTop_toBottomOf="@+id/sp_schoolYear" />

    <Spinner
        android:id="@+id/sp_2ndMajor"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="7dp"
        android:entries="@array/major"
        app:layout_constraintBottom_toTopOf="@+id/et_toeic"
        app:layout_constraintStart_toEndOf="@+id/tv_2ndMajor"
        app:layout_constraintTop_toBottomOf="@+id/sp_mainMajor" />

    <Spinner
        android:id="@+id/sp_thesis"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:entries="@array/thesis"
        app:layout_constraintBottom_toTopOf="@+id/btn_signUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_thesis"
        app:layout_constraintTop_toBottomOf="@+id/sp_2ndMajor" />

