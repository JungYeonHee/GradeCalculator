<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/btn_back"
        tools:ignore="VectorDrawableCompat" />

        <!-- top -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/student_grade"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginLeft="123dp"/>
            <TextView
                android:id="@+id/txt_student_grade"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="학년"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/semester"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_semester"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="학기"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginRight="123dp"/>
        </LinearLayout>

        <!-- 과목명 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:id="@+id/txt_add_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="과목명"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight= "43dp"/>

        <EditText
            android:id="@+id/add_name"
            android:layout_width="213dp"
            android:layout_height="40dp">

        </EditText>
        </LinearLayout>


    <!-- 교양/전공 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
       >

        <TextView
            android:id="@+id/txt_add_kind"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="교양/전공"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="45dp"/>

        <Spinner
            android:id="@+id/spinner_kind"
            android:layout_width="213dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>
    <!-- 전공/분류 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/txt_add_kind_major"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="전공 분류"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="45dp"/>
        <Spinner
            android:id="@+id/spinner_kind_major"
            android:layout_width="213dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>

    <!-- 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
       >

        <TextView
            android:id="@+id/txt_add_kind_domain"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="교양 영역"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="45dp"/>

        <Spinner
            android:id="@+id/spinner_kind_domain"
            android:layout_width="213dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>

    <!-- 학점 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/txt_add_credit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="학점"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="61dp"
            android:layout_marginLeft="45dp"/>

        <Spinner
            android:id="@+id/spinner_credit"
            android:layout_width="213dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>
    <!-- 등급 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/txt_add_grade"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="성적"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="61dp"
            android:layout_marginLeft="45dp"/>

        <Spinner
            android:id="@+id/spinner_grade"
            android:layout_width="213dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>

    <!-- 재수강 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/txt_add_retake"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="재수강"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginRight="42dp"
            android:layout_marginLeft="45dp"/>

        <Spinner
            android:id="@+id/spinner_retake"
            android:layout_width="213dp"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainColor"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="163dp"
            />

    </LinearLayout>
